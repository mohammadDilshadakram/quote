<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All posts</title>
    <link rel="stylesheet" href="/style.css">

</head>

<body>
    <h2>Quora posts</h2>
<div class="container">
    <% for(post of posts ){ %>
        <div class="card" data-tilt>
            <div class="posts">
                <h3 class="user">@ <%= post.username %>
                </h3>
                <h4 class="content">
                    <%= post.content %>
                </h4>
                <br>
                <a href="http://localhost:8080/posts/<%=post.id%>" class="btn">See in detail</a>
                <a href="http://localhost:8080/posts/<%=post.id%>/edit" class="btn">Edit post</a>
                <form method="post" action="/posts/<%=post.id%>?_method=DELETE">
                    <button class="btn1">Delete</button>
                </form>

            </div>
        </div>

        <%}%>

</div>
   


            <br><br>
            <a href="http://localhost:8080/posts/new" class="btn3"> create new post</a>

            <script src="vanilla-tilt.js"></script>

</body>

</html>